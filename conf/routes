# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /greet                      controllers.GreetController.greet(name: Option[String])
GET     /greet/db                   controllers.GreetController.dbGreet()
GET     /db/:tableName              controllers.TablesController.all(tableName: String)
GET     /actors                     controllers.ActorReportController.all()
GET     /actors/:actorId            controllers.ActorReportController.single(actorId: String)
# POST    /actors                     controllers.ActorFormController.newActor(actorId: String)
# PUT     /actors/:actorId            controllers.ActorFormController.editActor(actorId: String)
# DELETE  /actors/:actorId            controllers.ActorReportController.delete(actorId: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
